@*Model  Definition*@

@model PersonalHealthTracker.Models.DailySummaryViewModel

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<h1>DailySummary</h1>

<br />

<h2>@Model.PA.FirstOrDefault().Date.ToString("MM/dd/yyyy")</h2>

<br />

<div class="container">
    <div class="row">

    
<div class="col-sm-3">
    <h2>Physical</h2>
    @foreach (var item in Model.PA)
    {
        <div style="padding: 0.75rem; border-top: 1px solid">
            @item.Description
        </div>
    }
</div>
<div class="col-sm-3">
    <h2>Mental</h2>
    @foreach (var item in Model.MA)
    {
        <div style="padding: 0.75rem; border-top: 1px solid">
            @item.Description
        </div>
    }
</div>
<div class="col-sm-3">
    <h2>Nutrition</h2>
    @foreach (var item in Model.NUT)
    {
        <div style="padding: 0.75rem; border-top: 1px solid">
            @item.Description
        </div>
    }
</div>
<div class="col-sm-3">
    <h2>Sleep</h2>
    @foreach (var item in Model.SLP)
    {
        <div style="padding: 0.75rem; border-top: 1px solid">
            @item.Description
        </div>
    }
</div>
        </div>

</div>

