@model PersonalHealthTracker.Models.DailySummaryViewModel

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

    <style type="text/css">
        @@media only screen and (max-width: 1678px) {
            #datecolumn {
                display: block;
            }

            #pcolumnsmall {
                display: none;
            }

            #mcolumnsmall {
                display: none;
            }

            #ncolumnsmall {
                display: none;
            }

            #scolumnsmall {
                display: none;
            }
        }
        @@media only screen and (max-width: 560px) {
            #datecolumn {
                display: none;
            }

            #pcolumn {
                display: none;
            }

            #mcolumn {
                display: none;
            }

            #ncolumn {
                display: none;
            }

            #scolumn {
                display: none;
            }
            #pcolumnsmall {
                display: block;
            }

            #mcolumnsmall {
                display: block;
            }

            #ncolumnsmall {
                display: block;
            }

            #scolumnsmall {
                display: block;
            }
        }
