<h1>Date Range Summary</h1>

<br />

<div style="display: flex;">
    <h2 style="margin: auto">@Model.PA.FirstOrDefault().Date.ToString("MM/dd/yyyy")</h2>
    <h2>to</h2>
    <h2 style="margin: auto">@Model.PA.LastOrDefault().Date.ToString("MM/dd/yyyy")</h2>
</div>

<br />

<div class="container">
    <div class="row">
        <div class="col-sm-2" id="datecolumn">
            <h2>Date</h2>
            
            @foreach (var item in Model.PA)
            {
                @*<div style="border-top: 1px solid"></div>*@

                <div style="padding: 0.75rem; border-top: 1px solid">
                    @item.Date.ToShortDateString()
                </div>
            }
        </div>
        <div class="col-sm-2">
            <h2>Physical</h2>

            @foreach (var item in Model.PA)
            {
                <div id="pcolumn" style="padding: 0.75rem; border-top: 1px solid;">
                    @item.Description
                </div>
                <div id="pcolumnsmall" style="padding: 0.75rem; border-top: 1px solid;">
                    @item.Date.ToShortDateString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @item.Description
                </div>
            }

        </div>
        <div class="col-sm-2">
            <h2>Mental</h2>

            @foreach (var item in Model.MA)
            {
                <div id="mcolumn" style="padding: 0.75rem; border-top: 1px solid;">
                    @item.Description
                </div>
                <div id="mcolumnsmall" style="padding: 0.75rem; border-top: 1px solid;">
                    @item.Date.ToShortDateString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @item.Description
                </div>
            }

        </div>
        <div class="col-sm-2">
            <h2>Nutrition</h2>

            @foreach (var item in Model.NUT)
            {
                <div id="ncolumn" style="padding: 0.75rem; border-top: 1px solid">
                    @item.Description
                </div>
                <div id="ncolumnsmall" style="padding: 0.75rem; border-top: 1px solid">
                    @item.Date.ToShortDateString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @item.Description
                </div>
            }

        </div>
        <div class="col-sm-2">
            <h2>Sleep</h2>

            @foreach (var item in Model.SLP)
            {
                <div id="scolumn" style="padding: 0.75rem; border-top: 1px solid">
                    @item.Description
                </div>
                <div id="scolumnsmall" style="padding: 0.75rem; border-top: 1px solid">
                    @item.Date.ToShortDateString()&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @item.Description
                </div>
            }

        </div>
    </div>
</div>

