
@model Sleep
@*
    Same page for Add and Edit
    Add --> Model is null
    Edit --> Model is not null
*@

@{
    //var action = "";

    //if (Model == null)
    //{
    //    action = "Add";
    //}
    //else
    //{
    //    action = "Edit";
    //}
    // Ternary operator
    var action = Model == null ? "Add" : "Edit";

}


@if (action == "Add")
{
    <h1>Add a new Sleep Record</h1>
}
else
{
    <h1>Edit Sleep Record</h1>
}




<form asp-action="@action" asp-controller="Sleep" method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hours"></label>
        <input class="form-control" asp-for="Hours">
        <span asp-validation-for="Hours"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date">
        <span asp-validation-for="Date"></span>
    </div>

    <button type="submit" class="btn btn-primary">@action</button>
    <a class="btn btn-secondary" asp-action="index" asp-controller="Sleep">Cancel</a>

</form>


