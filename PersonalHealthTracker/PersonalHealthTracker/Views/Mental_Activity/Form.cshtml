
@model Mental_Activity
@*
    Same page for Add and Edit
    Add --> Model is null
    Edit --> Model is not null
*@

@{
    //var action = "";

    //if (Model == null)
    //{
    //    action = "Add";
    //}
    //else
    //{
    //    action = "Edit";
    //}
    // Ternary operator
    var action = Model == null ? "Add" : "Edit";

    var mentalActivityTypes = ViewData["MentalActivityTypes"] as ICollection<Mental_Activity_Type>; 
    IEnumerable<SelectListItem> matItems = new SelectList(mentalActivityTypes, "Id", "Description");
}


@if (action == "Add")
{
    <h1>Add a new Mental Activity</h1>
}
else
{
    <h1>Edit Mental Activity</h1>
}




<form asp-action="@action" asp-controller="Mental_Activity" method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration">
        <span asp-validation-for="Duration"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date">
        <span asp-validation-for="Date"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mental_Activity_TypeId"></label>
        <select class="form-control" asp-for="Mental_Activity_TypeId" asp-items="@matItems"></select>
    </div>

    <button type="submit" class="btn btn-primary">@action</button>
    <a class="btn btn-secondary" asp-action="index" asp-controller="Mental_Activity">Cancel</a>

</form>


