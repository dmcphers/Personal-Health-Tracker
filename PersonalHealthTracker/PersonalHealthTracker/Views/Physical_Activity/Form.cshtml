@model Physical_Activity
@*
    Same page for Add and Edit
    Add --> Model is null
    Edit --> Model is not null
*@

@{
    //var action = "";

    //if (Model == null)
    //{
    //    action = "Add";
    //}
    //else
    //{
    //    action = "Edit";
    //}
    // Ternary operator
    var action = Model == null ? "Add" : "Edit";

    var physicalActivityTypes = ViewData["PhysicalActivityTypes"] as ICollection<Physical_Activity_Type>; // ICollection<PhysicalActivityType>
    IEnumerable<SelectListItem> patItems = new SelectList(physicalActivityTypes, "Id", "Description");
}


@if (action == "Add")
{
    <h1>Add a new Physical Activity</h1>
}
else
{
    <h1>Edit Physical Activity</h1>
}




    <form asp-action="@action" asp-controller="Physical_Activity" method="post">
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Duration"></label>
            <input class="form-control" asp-for="Duration">
            <span asp-validation-for="Duration"></span>
        </div>
        <div class="form-group">
            <label asp-for="CaloriesBurned"></label>
            <input class="form-control" asp-for="CaloriesBurned">
            <span asp-validation-for="CaloriesBurned"></span>
        </div>
        <div class="form-group">
            <label asp-for="dayOfWeek"></label>
            <input class="form-control" asp-for="dayOfWeek">
            <span asp-validation-for="dayOfWeek"></span>
        </div>

        <div class="form-group">
            <label asp-for="Physical_Activity_TypeId"></label>
            <select class="form-control" asp-for="Physical_Activity_TypeId" asp-items="@patItems"></select>    
        </div>

        <button type="submit" class="btn btn-primary">@action</button>
        <a class="btn btn-secondary" asp-action="index" asp-controller="Physical_Activity">Cancel</a>

    </form>

